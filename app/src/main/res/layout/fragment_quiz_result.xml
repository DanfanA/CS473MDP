<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="quizlost"
            type="edu.miu.cs473mobiledeviceprogramming.QuizResult" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Total Quations :15"
                android:textSize="22sp"></TextView>

            <TextView
                android:id="@+id/txt_score"
                style="@style/ScoreStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{quizlost.add}">


            </TextView>

            <TextView
                android:id="@+id/txt_wrong_answer"
                style="@style/ScoreStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{quizlost.loss}">

            </TextView>

            <TextView
                android:id="@+id/txt1"
                style="@style/WrongAnswersStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                tools:text="5">
                >

            </TextView>

            <TextView
                android:id="@+id/txt2"
                style="@style/WrongAnswersStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="this is a wrong answer">

            </TextView>

            <TextView
                android:id="@+id/txt3"
                style="@style/WrongAnswersStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                tools:text="this is a wrong answer">

            </TextView>


            <Button
                android:id="@+id/btn_try_again"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="Try Again!">

            </Button>

            <Button
                android:id="@+id/btn_analysis"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="Result Analysis">

            </Button>

        </LinearLayout>
    </ScrollView>

</layout>
